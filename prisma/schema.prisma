// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Panel {
  id        Int      @id @default(autoincrement())
  guild     Guild    @relation(fields: [guildId], references: [id])
  guildId   Int
  team      Team     @relation(fields: [teamId], references: [id])
  teamId    Int
  messageId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Feedback {
  id        Int      @id @default(autoincrement())
  rating    Int
  ticket    Ticket   @relation(references: [id], fields: [ticketId])
  ticketId  Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int        @id @default(autoincrement())
  userId    String     @unique
  teams     TeamUser[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model TeamUser {
  id Int @id @default(autoincrement())

  team Team     @relation(fields: [teamId], references: [id])
  user User     @relation(fields: [userId], references: [id])
  role TeamRole @relation(fields: [roleId], references: [id])

  roleId Int
  teamId Int
  userId Int
  Ticket Ticket[]

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

model TeamRole {
  id   Int    @id @default(autoincrement())
  name String

  canReceiveTickets Boolean @default(false)

  teamUsers TeamUser[]
  team      Team       @relation(fields: [teamId], references: [id])
  teamId    Int

  @@unique([name, teamId])
  @@index([teamId])
}

model Team {
  id   Int    @id @default(autoincrement())
  name String

  roles   TeamRole[]
  users   TeamUser[]
  tickets Ticket[]
  panels  Panel[]
  guild   Guild      @relation(fields: [guildId], references: [id])
  guildId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, guildId])
}

model Customer {
  id       Int      @id @default(autoincrement())
  guild    Guild    @relation(fields: [guildId], references: [id])
  guildId  Int
  tickets  Ticket[]
  userId   String
  avatar   String?
  username String

  @@unique([userId, guildId])
}

model Ticket {
  id            Int       @id @default(autoincrement())
  channelId     String?
  adminThreadId String?
  claimant      TeamUser? @relation(fields: [claimantId], references: [id])
  customer      Customer  @relation(fields: [customerId], references: [id])
  guild         Guild     @relation(fields: [guildId], references: [id])
  team          Team      @relation(fields: [teamId], references: [id])
  feedback      Feedback?

  claimantId Int?
  customerId Int
  guildId    Int
  teamId     Int
  feedbackId Int?

  closedAt  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Guild {
  id        Int        @id @default(autoincrement())
  guildId   String     @unique
  teams     Team[]
  tickets   Ticket[]
  customers Customer[]
  panels    Panel[]

  @@index([guildId])
}
